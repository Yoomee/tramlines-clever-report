-title @report.name

-if @report.results.empty?
  %p No results found.
-else
  %table#clever_report_results
    %tr
      %th
      -@report.field_names.each do |field_name|
        %th=clever_label_name(field_name)
    -@report.results.each do |result|
      %tr
        %td=link_to("view", result)
        -@report.field_names.each do |field_name|
          %td=result.send(field_name)

-options_panel do
  =back_link
  =link_to("Edit report", edit_clever_report_path(@report))
  =link_to("Delete report", @report, :method => :delete, :confirm => "Are you sure?")